@model IEnumerable<Lexicon_LMS.Models.Group>

@{
    ViewBag.Title = "Index";
    int? gId = null;
    int? cId = null;
    int? aId = null;
}

<h4>
    / @Html.ActionLink("Samtliga grupper på Lexicon", "ListAllGroups", "Groups") / Mina grupper
</h4>


<td>
    @*@Html.ActionLink("Lista samtliga grupper på Lexicon", "ListAllGroups")  *@
    @*@Html.ActionLink("Skapa ny grupp", "Create")*@
    @*@Html.ActionLink("Skapa ny grupp", "Create", null, new { @class = "btn btn-default btn-m" }, new { id = User.Identity })*@
    @Html.ActionLink("Skapa ny grupp", "Create", null, new { @class = "btn btn-default btn-m" })
</td>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>


@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Index", "Courses", new { id = item.GroupId }, null)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>*@
        <td>
           
            @{
                string str = (string)item.Description;
                if(str.Count() > 7)
                {
                    str = str.Substring(0, 7); 
                }
                //str = str.Substring(0, 7); << vad händer om det bara finns 7 stycken tecken??
            }
            @str...
            @*@Html.DisplayFor(modelItem => item.Description)*@

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Detaljer", "Details", new { id = item.GroupId }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Ändra", "Edit", new { id = item.GroupId }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Ta bort", "Delete", new { id = item.GroupId }, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Lägg till dokument", "Create", "Documents", new { gId = item.GroupId, cId, aId}, new { @class = "btn btn-default btn-xs" })
            @Html.ActionLink("Visa dokument", "Index", "Documents", new { gId = item.GroupId, cId, aId }, new { @class = "btn btn-default btn-xs" })
        </td>
    </tr>
}

</table>
