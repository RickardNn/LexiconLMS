@model IEnumerable<Lexicon_LMS.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Aktiviteter</h2>
<h4>@ViewBag.Message</h4>

@if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Skapa ny", "Create", new { courseId = ViewBag.ActualCourseId }, new { @class = "btn btn-default btn-m" })
    </p>
}


<table class="table">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Teacher)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Course.Name)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            @if (User.IsInRole("Teacher"))
            {
                <td>

                    @Html.ActionLink("Detaljer", "Details", new { id = item.CourseId }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Ändra", "Edit", new { id = item.CourseId }, new { @class = "btn btn-default btn-xs" })
                    @Html.ActionLink("Ta bort", "Delete", new { id = item.CourseId }, new { @class = "btn btn-default btn-xs" })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Detaljer", "Details", new { id = item.CourseId }, new { @class = "btn btn-default btn-xs" })
                </td>

            }


            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.ActivityId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ActivityId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ActivityId })
                </td>*@
        </tr>
    }

</table>
